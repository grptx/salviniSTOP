{
  "name": "VeganSTOP",
  "manifest_version": 2,
  "version": "0.6",
  "description": "Rimuove la spazzatura Vegana dalla timeline facebook",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {

  },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "js": [
        "jquery.min.js",
        "wikiquote-api.js",
        "veganstop.js"
      ],
      "css": [
        "veganstop.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "https://it.wikiquote.org/*",
    "https://*.wikiquote.org/*",
    "https://it.wikiquote.org/w/api.php*",
    "https://it.wikiquote.org/w/api?*",
    "https://www.google-analytics.com/",
    "storage"
  ],
  "web_accessible_resources": [
    "images/icon48.png",
    "images/icon128.png"
  ]

}